{
  "manifest_version": 3,
  "name": "Grok Search",
  "version": "1.1",
  "description": "Search or summarize webpage content with Grok, including timeline infographics.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://grok.com/*",
    "https://*.x.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "timeline.html", "html2canvas.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}